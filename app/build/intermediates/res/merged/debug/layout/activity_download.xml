<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jc.activity.DownloadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/iv">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/d_btn"
                android:ellipsize="end"
                android:text="应用名"
                android:textAppearance="?android:textAppearanceMedium" />

            <Button
                android:id="@+id/delete_btn"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="#282dc4"
                android:layout_toLeftOf="@+id/d_btn"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="删除"
                android:textAppearance="?android:textAppearanceSmall" />

            <Button
                android:id="@+id/d_btn"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:background="#ff5544"
                android:padding="5dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:text="下载"
                android:textAppearance="?android:textAppearanceSmall" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/iv"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/next_tv"
                android:layout_toLeftOf="@+id/cancel_btn"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="#ff8899"
                android:text="下一个"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_toLeftOf="@+id/status_tv"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#ff8899"
                android:text="X"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已暂停"
                android:textAppearance="?android:textAppearanceSmall" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:max="100" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
